<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Personal Diary</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h1 class="mb-4">Welcome to your personal diary, <%= user.username %>!</h1>
    
    <div class="card mb-4">
      <div class="card-header">
        <h2>Your Diary Entries</h2>
      </div>
      <ul class="list-group list-group-flush">
        <% entries.forEach(entry => { %>
          <li class="list-group-item">
            <strong><%= entry.date.toDateString() %>:</strong> <%= entry.content %>
            <div class="mt-2">
              <a href="/edit-entry/<%= entry._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/delete-entry/<%= entry._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h2>Add a New Entry</h2>
      </div>
      <form class="card-body" action="/diary" method="POST">
        <div class="form-group">
          <label for="content">Entry Content:</label>
          <textarea class="form-control" id="content" name="entry" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Entry</button>
      </form>
    </div>

    <form action="/Logout" method="get">
      <button type="submit" class="btn btn-danger">Logout</button>
    </form>
  </div>
</body>
</html>
